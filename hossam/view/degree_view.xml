<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <record id="degree_form_view" model="ir.ui.view">
            <field name="name">degee.form.view</field>
            <field name="model">degree.detail</field>
            <field name="arch" type="xml">
                <form string="Degrees">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="dorf_id"/>
                            <field name="dord_id"/>
                            <field name="degfees"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="degree_tree_view" model="ir.ui.view">
            <field name="name">degree.tree.view</field>
            <field name="model">degree.detail</field>
            <field name="arch" type="xml">
                <tree string="Degrees">
                    <field name="name"/>
                    <field name="dorf_id"/>
                    <field name="dord_id"/>
                </tree>
            </field>
        </record>


        <record id="faculty_form_view" model="ir.ui.view">
            <field name="name">faculty.form.view</field>
            <field name="model">dorf.information</field>
            <field name="arch" type="xml">
                <form string="Faculty">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="faculty_tree_view" model="ir.ui.view">
            <field name="name">faculty.tree.view</field>
            <field name="model">dorf.information</field>
            <field name="arch" type="xml">
                <tree string="Faculty">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>






        <record id="department_form_view" model="ir.ui.view">
            <field name="name">department.form.view</field>
            <field name="model">dord.information</field>
            <field name="arch" type="xml">
                <form string="depatment">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="dorf_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="department_tree_view" model="ir.ui.view">
            <field name="name">department.tree.view</field>
            <field name="model">dord.information</field>
            <field name="arch" type="xml">
                <tree string="Faculty">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="dorf_id"/>
                </tree>
            </field>
        </record>


        <record id="degree_action" model="ir.actions.act_window">
            <field name="name">Degree</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">degree.detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph,calendar,kanban</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>


        <record id="faculty_action" model="ir.actions.act_window">
            <field name="name">Faculty Information</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dorf.information</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph,calendar,kanban</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>


        <record id="department_action" model="ir.actions.act_window">
            <field name="name">Department Information</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dord.information</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph,calendar,kanban</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>



        <!-- This Menu Item Must have a parent -->
        <menuitem id="degree_categ" name="Configration" parent="student_root"/>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="degree_act" name="Degree Details" parent="degree_categ" action="degree_action" groups="hossam.sttaf_access_group"/>
        <menuitem id="faculty_act" name="Faculty Information" parent="degree_categ" action="faculty_action"/>
        <menuitem id="department_act" name="Department Information" parent="degree_categ" action="department_action" />

    </data>
</openerp>